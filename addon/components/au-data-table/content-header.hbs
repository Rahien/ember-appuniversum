{{! template-lint-disable no-html-comments }}
<tr class="au-c-data-table__header">
  {{#if enableSelection}}
    <th class="au-c-data-table__header-title is-selectable"><!-- Checkbox --></th>
  {{/if}}
  {{#if enableLineNumbers}}
    <th class="au-c-data-table__header-title"><!-- Linenumbers --></th>
  {{/if}}
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{#each fields as |field|}}
      {{au-data-table-th-sortable field=field label=field currentSorting=sort}}
    {{/each}}
  {{/if}}
</tr>
