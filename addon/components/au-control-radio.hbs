<label
  for="{{@identifier}}"
  class="au-c-control au-c-control--radio
    {{this.disabledClass}}
    {{unless @label 'au-c-control--labelless'}}"
>
  <input
    name="{{@name}}"
    id="{{@identifier}}"
    value="{{@value}}"
    disabled={{@disabled}}
    type="radio"
    checked={{@checked}}
    class="au-c-control__input"
    {{on "change" this.onChange}}
    ...attributes
  />
  <span class="au-c-control__indicator"></span>
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{@label}}
  {{/if}}
</label>