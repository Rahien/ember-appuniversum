<div class="au-c-card__header" ...attributes>
  {{#if @badgeIcon}}
    <AuBadge
      @size="{{@badgeSize}}"
      @skin="{{@badgeSkin}}"
      @icon="{{@badgeIcon}}"
    />
  {{else if @badgeNumber}}
    <AuBadge
      @size="{{@badgeSize}}"
      @skin="{{@badgeSkin}}"
      @number="{{@badgeNumber}}"
    />
  {{/if}}

  {{#if (has-block)}}
    <div>
      {{yield "header"}}
    </div>
  {{/if}}
</div>